{
    "projects": {
        "anilist": {
            "schema": "./Schema/schema.graphql",
            "include": "./Schema/schema.extensions.graphql",
            "documents": "./Queries/**/*.graphql"
        }
    },
    "extensions": {
        "strawberryShake": {
            "name": "AnilistClient",
            "namespace": "AniNexus.MediaProviders.Anilist.Client",
            "url": "https://graphql.anilist.co/",
            "dependencyInjection": true,
            "strictSchemaValidation": true,
            "hashAlgorithm": "md5",
            "useSingleFile": true,
            "requestStrategy": "Default",
            "noStore": true,
            "emitGeneratedCode": true,
            "razorComponents": false,
            "transportProfiles": [
                {
                    "default": "Http",
                    "subscription": "WebSocket"
                }
            ]
        }
    }
}